{% include 'users/layout.twig' %}
{% include 'users/navbar.twig' %}
    <h4>Listado de Usuarios</h4>
    <a class="waves-effect waves-light btn" style="text-align='right'" href="/users/create">Nuevo Usuario</a>
    <table class="responsive-table">
        <thead>
          <tr>
            <th style="text-align: center">Id</th>
            <th style="text-align: center">Usuario</th>
            <th style="text-align: center">Fecha Actualizaci√≥n</th>
            <th style="text-align: center">Opciones</th>
          </tr>
        </thead>
        <tbody>
         {% for users in users %}
          <tr>
            <td style="text-align: center">{{users.id}}</td>
            <td style="text-align: center">{{users.usuario}}</td>
            <td style="text-align: center">{{users.fecha_actualizacion}}</td>
            <td style="text-align: center">
              <a class="waves-effect waves-light btn" href="/users/edit/{{ users.id}}"><i class="material-icons center">create</i></a>
              <a class="waves-effect waves-light btn red" href="/users/eliminar/{{ users.id}}"><i class="material-icons center">delete</i></a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="../javascripts/materialize.js"></script>
      <script src="../javascripts/init.js"></script>
      <script src="../javascripts/funciones.js"></script>
